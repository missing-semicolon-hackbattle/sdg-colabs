// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id         String          @id @default(uuid())
  title      String
  content    String
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  author     User            @relation(fields: [authorId], references: [id])
  authorId   String
  type       PostType
  sdgs       SDG[]
  References PostReference[]
  Referenced PostReference[] @relation("Referrer")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  type      UserType
}

enum UserType {
  INDIVIDUAL
  GROUP
  GOVERNMENT
  NONPROFIT
  ORGANIZATION
}

enum PostType {
  ARTICLE
  EVENT
  NEWS
  OPPORTUNITY
  PROJECT
  VOLUNTEER
}

model PostReference {
  id          String @id @default(uuid())
  post        Post   @relation("Referrer", fields: [postId], references: [id])
  postId      String
  reference   Post   @relation(fields: [referenceId], references: [id])
  referenceId String
  forwardRef  String
  backwardRef String
}

model SDG {
  id          String @id @default(uuid())
  goal        String @unique
  description String
  Posts       Post[]
}
